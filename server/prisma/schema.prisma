generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@map("stores")
}

model Product {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int
  storeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId])
  @@index([name])
  @@index([category])
  @@index([price])
  @@index([quantity])
  @@map("products")
}
